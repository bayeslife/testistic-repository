{
  "name": "testistic-repository",
  "version": "1.0.12",
  "author": "Phil <phil@xceptionale.com>",
  "license": "MIT",
  "description": "Testistic Base functionality",
  "main": "src/index.js",
  "keywords": [
    "testitic"
  ],
  "scripts": {
    "prebuild": "npm run lint",
    "build": "rollup -c",
    "lint": "eslint --fix src tests",
    "lint:tests": "eslint tests",
    "start": "npm run test:watch",
    "test:watch": "nodemon -w node_modules/testistic-model --watch src --watch tests --exec 'npm run test && npm run lint'",
    "test": "DEBUG=testistic-repositor,kafka-client mocha -r reify -r source-map-support/register tests/unit/*.spec.js",
    "integration": "DEBUG=testistic-repository,kafka-client mocha -r reify -r source-map-support/register tests/integration/*.spec.js",
    "prepublishOnly": "npm run build && npm test",
    "test:browser": "npm run build && opn http://127.0.0.1:8080/tests/ && serve -p 8080"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^5.0.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-standard": "^12.0.0-alpha.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.5",
    "opn-cli": "^3.1.0",
    "reify": "^0.16.2",
    "serve": "^9.1.0",
    "source-map-support": "^0.5.6",
    "uuid": "^3.3.2",
    "rollup": "^0.61.2",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-multi-entry": "^2.0.2",
    "rollup-plugin-node-resolve": "^3.3.0"
  },
  "dependencies": {
    "kafka-client": "latest",
    "testistic-model": "latest"
  }
}
